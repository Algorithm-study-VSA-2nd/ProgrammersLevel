def solution(s):
    #if s[0]==')' or s[-1]=='(' or len(s) % 2 ==1 or s.count('(') != s.count(')'):
    #    return False
    #return True
    l=[]
    for i in s:
        if len(l)==0:
            if i==')':
                return False
            
        if i=='(':
            l.append(i)
        else:
            l.pop()
    if len(l)==0:
        return True
    else:
        return False
            
        